[colors]
transparent = #00000000
background = #131B26
foreground = #F3F4F5
inactive-text = #818D92
accent = #0099FF
alert = #0066CC

[bar/master]
monitor = ${env:MONITOR}
width = 100%
height = 24
background = ${colors.background}
foreground = ${colors.foreground}
font-0 = "Roboto:pixelsize=12:antialias=true;1"
font-1 = "FontAwesome:pixelsize=12:antialias=true;1"

[bar/top]
inherit = bar/master
modules-left = bspwm title
modules-right = battery volume date time

border-top-size = 0
border-left-size = 0
border-right-size = 0

module-margin-left = 0
module-margin-right = 0
padding-left = 0
padding-right = 0

[module/bspwm]
type = internal/bspwm

pin-workspaces = true
enable-click = true
enable-scroll = true

label-empty = ""

label-focused-padding = 2
label-focused-background = ${colors.background}
label-focused-foreground = ${colors.foreground}

label-urgent-padding = 2
label-urgent-background = ${colors.alert}
label-urgent-foreground = ${colors.foreground}

label-occupied-padding = 2
label-occupied-background = ${colors.background}
label-occupied-foreground = ${colors.inactive-text}

format = <label-state> <label-mode>

[module/time]
type = internal/date

interval = 40
label = %time%
time = %H:%M
format-padding = 2
format-background = ${colors.background}
format-margin = 1

[module/date]
type = internal/date
interval = 1200
label = %date%
date = %A, %d %B
format-padding = 2
format-background = ${colors.accent}

[module/volume]
type = internal/pulseaudio

enable-click = false
use-ui-max = false

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
format-volume-padding = 2
format-volume-background = ${colors.background}
format-volume-foreground = ${colors.foreground}

format-muted = <label-muted>
label-muted =  muted
format-muted-padding = 2
format-muted-background = ${colors.background}
format-muted-foreground = ${colors.foreground}

format-volume-margin = 1
format-muted-margin = 1

[module/battery]
type = internal/battery

full-at = 99
battery = BAT0
adapter = AC
poll-interval = 5

time-format = %H:%M

format-charging = <label-charging>
label-charging =  %percentage%%
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
format-charging-padding = 2
format-charging-background = ${colors.accent}

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %percentage%% (%consumption% W)
format-discharging-padding = 2
format-discharging-background = ${colors.accent}

format-full = <label-full>
label-full =  %percentage%%
format-full-padding = 2
format-full-background = ${colors.accent}

format-full-margin = 1
format-discharging-margin = 1
format-charging-margin = 1

[module/title]
type = internal/xwindow
format-padding = 2
format-margin = 2
format-background = ${colors.background}
label-maxlen=100
